RM=rm -f

LD=arm-none-eabi-ld -nostdlib
CC=arm-none-eabi-gcc -nostdinc -nostdlib
AS=arm-none-eabi-as
AR=arm-none-eabi-ar

OBJS=$(CSRCS:.c=.o) $(ASRCS:.s=.o)

define DIR_template
$(1)_$(2):
	$(Q) $(MAKE) -C $(1) $(2) TOPDIR="$(TOPDIR)"
endef

%.o:%.c
	@echo compiling $<
	@$(CC) -c $(CFLAGS) -o $@ $<

